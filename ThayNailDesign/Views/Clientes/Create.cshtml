@model Cliente

<h2>Cadasto de cliente</h2>

<div class="row">
    <form class="col-md-4" asp-action="Create">

        <div class="form-group">
            <label class="control-label" asp-for="Nome"></label>
            <input class="form-control" asp-for="Nome" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Telefone"></label>
            <input class="form-control" asp-for="Telefone" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Nasc"></label>
            <input class="form-control" asp-for="Nasc" />
            <span asp-validation-for="Nasc" class="text-danger"></span>
        </div>
       

        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Criar!" />
            <a class="btn btn-info" asp-controller="Clientes" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
