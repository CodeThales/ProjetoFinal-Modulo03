@model Agenda

<h2>Atualize o atendimento abaixo:</h2>


<div class="row">
    <form class="col-md-4" asp-action="update">

        <div class="form-group">
            <label asp-for="clienteId" class="control-label"></label>
            <select asp-for="clienteId" class="form-control" asp-items="ViewBag.listaDeClientes">
                <option value="">--Selecione--</option>
            </select>
            <span class="text-danger" asp-validation-for="clienteId"></span>
        </div>
        <div class="form-group">
            <label asp-for="servicoId" class="control-label"></label>
            <select asp-for="servicoId" class="form-control" asp-items="ViewBag.listaDeServicos">
                <option value="">--Selecione--</option>
            </select>
            <span class="text-danger" asp-validation-for="servicoId"></span>
        </div>

        <div class="form-group">
            <label asp-for="data" class="control-label">Data do atendimento</label>
            <input asp-for="data" class="form-control">
        </div>

        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Atualizar!" />
            <a class="btn btn-info" asp-action="Index">Voltar!</a>
        </div>
    </form>
</div>
