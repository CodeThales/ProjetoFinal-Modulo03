@model Cliente

<h1>Atualizar Cadastro do Cliente</h1>

<div class="row">
    <form class="col-md-4" asp-action="Update">
        <input type="hidden" asp-for="Id"/>
        <div class="form-group">
            <label class="control-label" asp-for="Nome"></label>
            <input class="form-control" asp-for="Nome" />
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Telefone"></label>
            <input class="form-control" asp-for="Telefone" />
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Nasc"></label>
            <input class="form-control" asp-for="Nasc" />
        </div>
        <div class="form-group">
            <input type="submit" value="Atualizar!" />
            <a asp-controller="Clientes" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>